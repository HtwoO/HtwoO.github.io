}

.article-index a {
    text-decoration: none;
    color: #8a6;
}

.article-index a:hover {
    text-decoration: underline;
    color: #f83;
}

.cat-list {
    list-style: none;
}

.cat-list {
    list-style: none;
}

.tag {
    font-size: 12px;
}

.footer {
    background-color: #222;
    border-radius: 3px;
    padding: 20px;
    margin-bottom: 10px;
}

.article {
    font-family: monospace;
    background-color: #272727;
    border-radius: 3px;
    margin-bottom: 10px;
    padding: 20px;
}

.article h1 {
    margin-top: 0;
}

.article-content {
    color: #ccc;
}

.highlight {
    padding: 5px;
