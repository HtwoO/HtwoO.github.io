    list-style: none;
}

.widget {
    background-color: #222;
    padding: 10px;
    border-radius: 3px;
    margin-bottom: 10px;
}

.article-index {
    background-color: #222;
/*    border-radius: 3px;
    margin-bottom: 10px;
