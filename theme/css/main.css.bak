body {
    background-color: #333;
    color: #ccc;
}

a {
    text-decoration: none;
    color: #8a6;
}

strong {
    color: #439A40;
}

a:visited {
    text-decoration: none;
    color: #363;
}

a:hover {
    text-decoration: underline;
    color: #f83;
}

.header {
    background-color: #222;
    font-size: 1.2em;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    padding: 15px 0 15px 0;
}

#navigation {
    list-style: none;
    margin: 0 auto;
    padding: 0;
}

#navigation li {
    display: inline;
    margin: 0 auto;
    float: left;
}

#navigation li a {
    text-decoration: none;
    color: #ccc;
    padding: 15px;
    border-radius: 3px;
}

#navigation li a:hover {
    background-color: #555;
}

.group {
    display: inline-block;
}

#content {
    margin-top: 20px;
}

#side {
    display: block;
    margin-top: 20px;
}

#side h2 {
    margin-top: 0;
    font-size: 15px;
}

